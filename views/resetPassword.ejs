<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reset Password</title>
    <style>
        .body-div {
            width: 100%;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        form {
            width: 500px;
            height: auto;
            padding: 20px;
            background-color: whitesmoke;
            box-shadow: rgba(17, 12, 46, 0.15) 0px 48px 100px 0px;
            border-radius: 8px;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
        }

        input {
            width: 90%;
            height: 60px;
            border-radius: 8px;
            margin-bottom: 10px;
            padding: 0px 10px;
            font-size: 24px;

        }

        input[type="submit"] {
            background-color: rgb(23, 131, 131);
            color: white;
            cursor: pointer;
        }

        input[type="submit"]:hover {
            background-color: rgba(23, 131, 131, 0.95);
        }
    </style>
    <script>
        var status = '<%- JSON.stringify(status) %>';
        if (JSON.parse(status) == "Verified") {
            if (confirm("Do you want to login?")) {
                window.location.href = "http://localhost:3000/";
            }
        }
        if (JSON.parse(status) == "Same Password") {
            window.alert("You Cannot use old password");
        }
    </script>
</head>

<body>
    <div class="body-div">
        <form action="" method="post">
            <h1>Reset Password</h1>
            <input type="email" placeholder="Your Email" value="<%= email%>">
            <input type="password" name="password" placeholder="password" id="password">
            <input type="submit" value="Submit">
        </form>
    </div>
</body>

</html>